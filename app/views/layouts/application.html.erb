<!DOCTYPE html>
<html>
<head>
  <%= render('layouts/user_bar') %>
  <title>PathfinderUtils</title>
  <% unless session[:character_id].nil? %>
      <h2><center><%= Character.find(session[:character_id]).name %></center></h2>
  <% end %>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
